<% if (item.categories && item.categories.length){ %>
  
  <%
  var cats = [];
  item.categories.forEach(function(cat){
    cats.push('<a class="btn btn-success btn-xs" href="' + config.root + cat.path + '">' + cat.name + '</a>');
  });
  %>
  <div class="categories">
    <span>Posted in: </span><%- cats.join(', ') %>
  </div>
<% } %>
